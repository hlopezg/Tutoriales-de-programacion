<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp" >

        <TextView
            android:id="@+id/textView_bienvenida_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView_bienvenida_1"
            android:text="@string/bienvenida2_1" />

        <ImageView
            android:id="@+id/imageView_bienvenida_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_smartphone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp" >

        <TextView
            android:id="@+id/textView_bienvenida_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15sp"
            android:layout_toLeftOf="@+id/imageView_bienvenida_2"
            android:text="@string/bienvenida2_2" />

        <ImageView
            android:id="@+id/imageView_bienvenida_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15sp"
            android:src="@drawable/pdf" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp" >

        <TextView
            android:id="@+id/textView_bienvenida_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15sp"
            android:layout_toLeftOf="@+id/imageView_bienvenida_3"
            android:text="@string/bienvenida2_3" />

        <ImageView
            android:id="@+id/imageView_bienvenida_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15sp"
            android:src="@drawable/pdf_smartphone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp" >

        <TextView
            android:id="@+id/textView_bienvenida_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15sp"
            android:text="@string/bienvenida2_4" />

        <ImageView
            android:id="@+id/imageView_bienvenida_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15sp"
            android:src="@drawable/web" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp" >

        <TextView
            android:id="@+id/textView_bienvenida_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15sp"
            android:text="@string/bienvenida2_5" />

        <ImageView
            android:id="@+id/imageView_bienvenida_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15sp"
            android:src="@drawable/star" />
    </RelativeLayout>

</LinearLayout>